    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
        ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="ua.com.AACC.is.socketServer" level="DEBUG" additivity="false">
        <appender-ref ref="FILE-SOCKETSERVER" />
    </logger>
    <logger name="ua.com.AACC.is.cct.SessionMonitor" level="WARN" additivity="false">
        <appender-ref ref="FILE-CCT-SessionMonitor" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="ua.com.AACC.is.cct" level="INFO" additivity="false">
        <appender-ref ref="FILE-CCT" />
    </logger>
    <logger name="ua.com.AACC.is.run" level="INFO" additivity="false">
        <appender-ref ref="FILE-MAIN" />
    </logger>
    <logger name="ua.com.AACC.is.http" level="WARN" additivity="false">
        <appender-ref ref="FILE-HTTP" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="ua.com.AACC.is.callback" level="DEBUG" additivity="false">
        <appender-ref ref="FILE-HTTP" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="ua.com.AACC.is.db.CacheCCMMconnection" level="DEBUG">
        <appender-ref ref="FILE-CacheCCMMconnection" />
    </logger>
    <logger name="CCTevents" level="DEBUG" additivity="false">
        <appender-ref ref="FILE-CCT-Events-All" />
    </logger>
    <logger name="Timing" level="DEBUG" additivity="false">
        <appender-ref ref="FILE-Timing" />
    </logger>

    <root level="WARN">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </root>

</configuration>